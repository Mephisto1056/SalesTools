# 应用配置
PROJECT_NAME=Sales Tools Python API
VERSION=1.0.0
ENVIRONMENT=development

# 服务器配置
HOST=0.0.0.0
PORT=8000

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production-python-api
ACCESS_TOKEN_EXPIRE_MINUTES=43200
ALGORITHM=HS256

# CORS 配置
BACKEND_CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# 可信主机配置
ALLOWED_HOSTS=localhost,127.0.0.1

# 数据库配置
DATABASE_URL=postgresql://user:password@localhost/sales_tools
POSTGRES_SERVER=localhost
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=sales_tools

# Redis 配置
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# 邮件配置
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@salestools.com
EMAILS_FROM_NAME=Sales Tools

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv,application/json

# 外部服务配置
EXTERNAL_API_URL=https://api.external-service.com
EXTERNAL_API_KEY=your-external-api-key

# 缓存配置
CACHE_TTL=300

# 分页配置
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# 速率限制配置
RATE_LIMIT_PER_MINUTE=60

# 监控配置
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# 机器学习/数据分析配置
ML_MODEL_PATH=models/
ENABLE_ML_FEATURES=true
DATA_PROCESSING_WORKERS=4

# 任务队列配置 (如果使用 Celery)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# 开发工具配置
DEBUG=false
RELOAD=true